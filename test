    <script>
        // 設置最小日期為今天
        function setMinDate() {
            const today = new Date();
            const yyyy = today.getFullYear();
            const mm = String(today.getMonth() + 1).padStart(2, '0');
            const dd = String(today.getDate()).padStart(2, '0');
            const minDate = `${yyyy}-${mm}-${dd}`;
            document.getElementById('appointmentDate').min = minDate;
        }

        // 頁面加載時設置最小日期
        window.addEventListener('load', setMinDate);
        
        // 步驟切換功能
        document.getElementById('toStep2').addEventListener('click', function() {
            // 驗證個人資訊
            const nameInput = document.getElementById('name');
            const phoneInput = document.getElementById('phone');
            
            if (!nameInput.value) {
                alert('請輸入姓名');
                nameInput.focus();
                return;
            }
            
            if (!phoneInput.value || !phoneInput.checkValidity()) {
                alert('請輸入有效的手機號碼');
                phoneInput.focus();
                return;
            }
            
            document.getElementById('step1').style.display = 'none';
            document.getElementById('step2').style.display = 'block';
        });
        
        document.getElementById('backToStep1').addEventListener('click', function() {
            document.getElementById('step2').style.display = 'none';
            document.getElementById('step1').style.display = 'block';
        });
        
        document.getElementById('toStep3').addEventListener('click', function() {
            // 驗證是否選擇了至少一項服務
            const selectedServices = document.querySelectorAll('input[name="service"]:checked');
            if (selectedServices.length === 0) {
                document.getElementById('serviceError').style.display = 'block';
                return;
            } else {
                document.getElementById('serviceError').style.display = 'none';
            }
            
            // 更新所需時長顯示
            const totalDuration = calculateTotalDuration();
            document.getElementById('requiredDuration').textContent = totalDuration;
            
            document.getElementById('step2').style.display = 'none';
            document.getElementById('step3').style.display = 'block';
        });
        
        document.getElementById('backToStep2').addEventListener('click', function() {
            document.getElementById('step3').style.display = 'none';
            document.getElementById('step2').style.display = 'block';
        });
        
        document.getElementById('toStep4').addEventListener('click', function() {
            // 驗證是否選擇了日期和時間
            if (!document.getElementById('appointmentDate').value) {
                alert('請選擇預約日期');
                return;
            }
            
            if (!document.getElementById('appointmentTime').value) {
                alert('請選擇預約時段');
                return;
            }
            
            document.getElementById('step3').style.display = 'none';
            document.getElementById('step4').style.display = 'block';
            
            // 更新預約摘要中的日期和時間
            updateAppointmentSummary();
        });
        
        document.getElementById('backToStep3').addEventListener('click', function() {
            document.getElementById('step4').style.display = 'none';
            document.getElementById('step3').style.display = 'block';
        });
        
        // 更新日期顯示格式的處理函數
        document.getElementById('appointmentDate').addEventListener('change', function() {
            const selectedDate = this.value;
            if (selectedDate) {
                // 格式化日期顯示
                const dateObj = new Date(selectedDate);
                const year = dateObj.getFullYear();
                const month = String(dateObj.getMonth() + 1).padStart(2, '0');
                const day = String(dateObj.getDate()).padStart(2, '0');
                const formattedDate = `${year}/${month}/${day}`;
                
                // 更新顯示的日期
                document.getElementById('dateDisplay').value = formattedDate;
                
                // 更新預約摘要中的日期顯示
                const formattedDateLong = dateObj.toLocaleDateString('zh-TW', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    weekday: 'long'
                });
                document.getElementById('selectedDateDisplay').textContent = formattedDateLong;
                document.getElementById('summaryDate').textContent = formattedDateLong;
                
                // 顯示時段選擇區域
                document.getElementById('timeSlotsContainer').style.display = 'block';
                
                // 根據服務時長生成可用時段
                generateAvailableTimeSlots();
            } else {
                document.getElementById('dateDisplay').value = '';
                document.getElementById('timeSlotsContainer').style.display = 'none';
            }
        });
        
        // 點擊顯示框時觸發日期選擇
        document.getElementById('dateDisplay').addEventListener('click', function() {
            document.getElementById('appointmentDate').showPicker();
        });
        
        // 美甲師標籤點擊
        document.querySelectorAll('.schedule-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                // 移除所有標籤的活躍狀態
                document.querySelectorAll('.schedule-tab').forEach(t => t.classList.remove('active'));
                
                // 設置當前標籤為活躍
                this.classList.add('active');
                
                // 更新隱藏欄位
                const beauticianId = this.dataset.beautician;
                document.getElementById('appointmentBeautician').value = beauticianId;
                document.getElementById('summaryBeautician').textContent = beauticianId;
                
                // 顯示預約摘要
                document.getElementById('appointmentSummary').style.display = 'block';
            });
        });
        
        // 服務選項點擊處理
        document.querySelectorAll('.service-option').forEach(option => {
            option.addEventListener('click', function(e) {
                // 如果點擊的不是 checkbox 本身，則模擬點擊 checkbox
                if (e.target.type !== 'checkbox') {
                    const checkbox = this.querySelector('input[type="checkbox"]');
                    checkbox.checked = !checkbox.checked;
                }
                
                // 更新選中狀態的視覺效果
                if (this.querySelector('input[type="checkbox"]').checked) {
                    this.classList.add('selected');
                } else {
                    this.classList.remove('selected');
                }
                
                // 更新總金額和總時長
                updateTotalPrice();
                updateTotalDuration();
            });
        });
        
        // 更新總金額
        function updateTotalPrice() {
            let total = 0;
            document.querySelectorAll('input[name="service"]:checked').forEach(checkbox => {
                total += parseInt(checkbox.dataset.price);
            });
            document.querySelector('.total-price').textContent = `NT$${total}`;
            document.getElementById('summaryPrice').textContent = `NT$${total}`;
        }
        
        // 更新總時長
        function updateTotalDuration() {
            const totalDuration = calculateTotalDuration();
            document.getElementById('totalDuration').textContent = totalDuration;
            document.getElementById('summaryDuration').textContent = `${totalDuration} 分鐘`;
        }
        
        // 計算總時長
        function calculateTotalDuration() {
            let totalDuration = 0;
            document.querySelectorAll('input[name="service"]:checked').forEach(checkbox => {
                totalDuration += parseInt(checkbox.dataset.duration);
            });
            return totalDuration;
        }
        
        // 根據服務時長生成可用時段
        function generateAvailableTimeSlots() {
            const totalDuration = calculateTotalDuration();
            const timeSlotsContainer = document.getElementById('availableTimeSlots');
            timeSlotsContainer.innerHTML = '';
            
            // 假設營業時間是 10:00 - 20:00，每小時一個時段
            const startHour = 10;
            const endHour = 20;
            
            // 根據所需時長，計算最晚可開始的時間
            const latestStartHour = endHour - Math.ceil(totalDuration / 60);
            
            for (let hour = startHour; hour <= latestStartHour; hour++) {
                const timeSlot = document.createElement('div');
                timeSlot.className = 'time-slot';
                timeSlot.dataset.time = `${hour}:00`;
                timeSlot.textContent = `${hour}:00`;
                
                // 隨機設置一些時段為不可用（示例）
                if ((hour === 12 || hour === 16) && Math.random() > 0.5) {
                    timeSlot.classList.add('unavailable');
                } else {
                    timeSlot.addEventListener('click', function() {
                        document.querySelectorAll('.time-slot').forEach(s => s.classList.remove('selected'));
                        this.classList.add('selected');
                        document.getElementById('appointmentTime').value = this.dataset.time;
                        document.getElementById('summaryTime').textContent = this.dataset.time;
                    });
                }
                
                timeSlotsContainer.appendChild(timeSlot);
            }
        }
        
        // 圖片預覽功能
        function previewImage(event) {
            const preview = document.getElementById('imagePreview');
            preview.src = URL.createObjectURL(event.target.files[0]);
            preview.style.display = 'block';
        }
        
        // 更新預約摘要
        function updateAppointmentSummary() {
            // 更新服務項目摘要
            const selectedServices = document.querySelectorAll('input[name="service"]:checked');
            const servicesList = Array.from(selectedServices).map(service => service.value);
            document.getElementById('summaryServices').textContent = servicesList.join(', ');
            
            // 顯示預約摘要
            document.getElementById('appointmentSummary').style.display = 'block';
        }
        
        // 表單提交處理
        document.getElementById('nailAppointmentForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // 驗證是否選擇了美甲師
            if (!document.getElementById('appointmentBeautician').value) {
                alert('請選擇美甲師！');
                return;
            }
            
            // 獲取所有表單數據
            const formData = {
                name: document.getElementById('name').value,
                phone: document.getElementById('phone').value,
                line: document.getElementById('line').value,
                beautician: document.getElementById('appointmentBeautician').value,
                date: document.getElementById('appointmentDate').value,
                time: document.getElementById('appointmentTime').value,
                services: Array.from(document.querySelectorAll('input[name="service"]:checked')).map(service => service.value),
                totalPrice: document.querySelector('.total-price').textContent,
                totalDuration: document.getElementById('totalDuration').textContent + ' 分鐘',
                notes: document.getElementById('notes').value
            };
            
            console.log('預約資料:', formData);
            alert('預約已提交！我們會盡快與您聯繫確認。');
            
            // 實際應用中，這裡應該有更完善的處理邏輯，例如 AJAX 提交到後端
        });
    </script>
</body>
</html>
